[Unit]
Description=Eufy MQTT Broker and Healthcheck
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/eufy-cam
ExecStart=/usr/bin/node /root/eufy-cam/webserver/server.js
Restart=always
RestartSec=1
StandardOutput=journal
StandardError=journal

# Environment variables
Environment=NODE_ENV=production
EnvironmentFile=/root/eufy-cam/.env

[Install]
WantedBy=multi-user.target
